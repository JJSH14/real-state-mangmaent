<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefWidth="634.0" spacing="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.loborems.controllers.OffersController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <TabPane VBox.vgrow="ALWAYS">
        <Tab text="Offers Management">
            <VBox spacing="10">
                <HBox alignment="CENTER_LEFT" spacing="10">
               <Button fx:id="backButton" onAction="#handleBack" alignment="CENTER" mnemonicParsing="false" text="Back" />
                    <Label text="Client Name:" />
                    <TextField fx:id="clientNameField" promptText="Enter client name" HBox.hgrow="ALWAYS" />

                    <Label text="Property Type:" />
                    <ComboBox fx:id="propertyTypeCombo" promptText="Select Property Type">
                    </ComboBox>
                </HBox>

                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="Offer Type:" />
                    <ComboBox fx:id="offerTypeCombo" promptText="Select Offer Type">
                        <items>
                        </items>
                    </ComboBox>

                    <Label text="Price:" />
                    <TextField fx:id="priceField" promptText="Enter offer price" />

                    <Button fx:id="addOfferButton" text="Add Offer" />
                </HBox>

                <TableView fx:id="offersTable">
                    <columns>
                        <TableColumn fx:id="clientNameColumn" text="Client Name" />
                        <TableColumn fx:id="propertyTypeColumn" text="Property Type" />
                        <TableColumn fx:id="offerTypeColumn" text="Offer Type" />
                        <TableColumn fx:id="priceColumn" text="Price" />
                        <TableColumn fx:id="statusColumn" text="Status" />
                    </columns>
                </TableView>
            </VBox>
        </Tab>

        <Tab text="Client Management">
            <VBox spacing="10">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="Name:" />
                    <TextField fx:id="clientNameInputField" promptText="Enter client name" HBox.hgrow="ALWAYS" />

                    <Label text="Contact Info:" />
                    <TextField fx:id="contactInfoField" promptText="Enter contact information" />
                </HBox>

                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="Client Category:" />
                    <ComboBox fx:id="clientCategoryCombo" promptText="Select Client Category">
                    </ComboBox>

                    <Label text="Preferences:" />
                    <TextField fx:id="preferencesField" promptText="Enter property preferences" />

                    <Button fx:id="addClientButton" text="Add Client" />
                </HBox>

                <TableView fx:id="clientsTable">
                    <columns>
                        <TableColumn fx:id="clientNameColumn2" text="Name" />
                        <TableColumn fx:id="contactInfoColumn" text="Contact Info" />
                        <TableColumn fx:id="categoryColumn" text="Category" />
                        <TableColumn fx:id="preferencesColumn" text="Preferences" />
                    </columns>
                </TableView>
            </VBox>
        </Tab>
    </TabPane>
</VBox>
