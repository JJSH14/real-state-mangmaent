<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<VBox styleClass="main-layout" stylesheets="@property-listing.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.loborems.controllers.PropertyListingController">

   <!-- Main Layout with Sidebar and Content Area -->
   <HBox HBox.hgrow="ALWAYS">
      <!-- Sidebar -->
      <VBox fx:id="sidebar" prefWidth="250.0" styleClass="sidebar" VBox.vgrow="ALWAYS">
         <TextField fx:id="filterSearch" prefHeight="45.0" promptText="Filter..." styleClass="search-field" />

         <ComboBox fx:id="propertyTypeComboBox" prefHeight="45.0" promptText="Select Type" styleClass="combo-box">
            <items>
               <FXCollections fx:factory="observableArrayList">
                  <String fx:value="Residential" />
                  <String fx:value="Commercial" />
               </FXCollections>
            </items>
         </ComboBox>

         <CheckBox fx:id="hasGardenCheckBox" styleClass="checkbox" text="Has Garden" />
         <TextField fx:id="minPriceField" promptText="Min Price" styleClass="price-field" />
         <TextField fx:id="maxPriceField" promptText="Max Price" styleClass="price-field" />
         <TextField fx:id="locationField" promptText="Location" styleClass="location-field" />

         <Button fx:id="applyFiltersButton" mnemonicParsing="false" onAction="#handleFilterApply" prefHeight="45.0" prefWidth="200.0" styleClass="button" text="Apply Filters" />
      </VBox>

      <!-- Main Content Area -->
      <VBox prefHeight="1009.0" prefWidth="882.0" styleClass="content-area" VBox.vgrow="ALWAYS">
         <!-- Top Navigation Area -->
         <VBox minHeight="180.0" prefHeight="180.0" styleClass="top-nav" VBox.vgrow="NEVER">
            <HBox alignment="CENTER" prefHeight="80.0" spacing="20.0" styleClass="nav-buttons">
               <Button fx:id="toggleSidebarButton" mnemonicParsing="false" onAction="#handleToggleSidebar" prefHeight="45.0" prefWidth="90.0" styleClass="button" text="â˜° Sidebar" />
               <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBackClick" prefHeight="45.0" prefWidth="90.0" styleClass="button" text="â† Back" />
               <TextField fx:id="searchBar" prefHeight="45.0" prefWidth="300.0" promptText="Search properties..." styleClass="search-field" />
               <Button fx:id="searchButton" mnemonicParsing="false" onAction="#handleSearchClick" prefHeight="45.0" prefWidth="90.0" styleClass="button" text="ðŸ” Search" />
               <Button fx:id="addPropertyButton" mnemonicParsing="false" onAction="#handleButtonClick" prefHeight="45.0" prefWidth="130.0" styleClass="button" text="âž• Add Property" />
            </HBox>
         </VBox>

         <!-- Scrollable Content Area -->
         <ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="scroll-pane" VBox.vgrow="ALWAYS">
            <content>
               <FlowPane fx:id="propertyListContainer" alignment="CENTER" hgap="20" styleClass="property-list" vgap="20" />
            </content>
         </ScrollPane>
      </VBox>
   </HBox>
</VBox>
